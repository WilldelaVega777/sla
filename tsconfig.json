{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "lib": ["ESNext"],
        "strict": true,
        "esModuleInterop": true,
        "allowJs": true,
        "outDir": "dist",
        "rootDir": ".",
        "removeComments": true,

        "noImplicitAny": true,
        "moduleResolution": "node",
        "baseUrl": ".",
        "paths": {
            "@src/*": ["src/*"]
        },
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "exclude": ["node_modules", "dist", "coverage"],
    "include": ["src"]
}
